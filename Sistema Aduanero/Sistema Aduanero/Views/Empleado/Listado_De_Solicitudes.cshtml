@using Sistema_Aduanero.Models
@{
    Layout = "_Layout_Empleados";
    var listado_servicios = ViewBag.Listado_General_De_Envios;
}

<div class="row">
    <div class="col-md-4">
        <h1>Listado de solicitudes</h1>
    </div>
    <div class="col-md-4 col-md-offset-4">
        <form asp-action="" asp-controller="" class="mini_formulario_para_consultar_solicitudes">
            <div class="input-group">
                    <input type="text" name="noticias" class="form-control" placeholder="No. del pedido">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                        </button>
                    </span>
            </div><!-- /input-group -->
            <!--</div> /.col-lg-6 -->
        </form>
    </div>
</div>

<div class="row tabla_listado_de_solicitudes">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>No. del servicio</th>
                <th>Codigo Factura</th>
                <th>Cantidad</th>
                <th>Estado</th>
                <th>Fecha del envio</th>
            </tr>
            @foreach (var item in listado_servicios)
            {
                <tr>
                    <td>@item.IdEnvio</td>
                    <td>@item.IdFacturaFkEnvio</td>
                    <td>@item.CantidadArticulos</td>
                    <td>@item.FechaDeEnvio</td>
                    <td>@item.Estatus</td>
                </tr>
            }
        </table>
    </div>
</div>