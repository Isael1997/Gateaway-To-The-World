@{
    Layout = "_Layout_Empleados";
    var listado_de_clientes = ViewBag.Listado_Cliente;
}

<div class="row">
    <div class="col-md-4">
        <h1>Listado de clientes</h1>
    </div>
    <div class="col-md-4 col-md-offset-4">
        <form action="" method="get" class="mini_formulario_para_consultar_solicitudes">
            <div class="input-group">
                <input type="text" name="noticias" class="form-control" placeholder="Código del cliente">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                    </button>
                </span>
            </div><!-- /input-group -->
            <!--</div> /.col-lg-6 -->
        </form>
    </div>
</div>

<div class="row tabla_listado_de_solicitudes">
    <div class="col-md-12">
        <table class="table text-center">
            <tr>
                <th>Código</th>
                <th>Apellido(s)</th>
                <th>Nombre(s)</th>
                <th>Empresa</th>
                <th>Cedula</th>
                <th>Provincia</th>
                <th>Municipio</th>
                <th>Fecha de registro</th>
            </tr>
            @foreach (var item in listado_de_clientes)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Apellidos</td>
                    <td>@item.Nombres</td>
                    <td>@item.Empresa</td>
                    <td>@item.Cedula</td>
                    <td>@item.Provincia</td>
                    <td>@item.Municipio</td>
                    <td>@item.FechaDeRegistro</td>
                </tr>
            }
        </table>
    </div>
</div>